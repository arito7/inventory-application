<!DOCTYPE html>
<html>
  <%- include('./partials/head', {title}) %>
  <body class="grey lighten-4">
    <%- include('./partials/header',{title}) %>
    <div class="row">
      <div class="col m3"><%- include('./partials/sidenav') %></div>
      <div class="col s12 m9 center-align">
        <h1><%= title %></h1>

        <div class="row">
          <div class="col s12">
            <h2>Categories</h2>
          </div>

          <div class="col s12">
            <ul>
              <% categories.forEach(category => { %> <%-
              include('./partials/category-chip', {category}) %> <% }) %>
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <h2>Items</h2>
          </div>

          <div class="col s12">
            <ul>
              <% items.forEach(item => { %>
              <li><%- include('./partials/item-card',{item}) %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%= error %>
  </body>
</html>

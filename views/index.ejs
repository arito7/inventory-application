<!DOCTYPE html>
<html>
  <%- include('./partials/head', {title}) %>
  <body class="grey lighten-4">
    <%- include('./partials/header',{title}) %>
    <div class="row">
      <div class="col m3">
        <ul>
          <li><a href="/catalog/items">Items</a></li>
          <li>
            <a class="waves-effect" href="/catalog/categories">Categories</a>
          </li>
        </ul>
      </div>
      <div class="col s12 m9">
        <h1><%= title %></h1>

        <div class="row">
          <div class="col s12">
            <h2>Categories</h2>
          </div>

          <div class="col s12">
            <ul>
              <% categories.forEach(category => { %> <%-
              include('./partials/category-chip', {category}) %> <% }) %>
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <h2>Items</h2>
          </div>

          <div class="col s12">
            <ul>
              <% items.forEach(item => { %>
              <li><%- include('./partials/item-card',{item}) %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%= error %>
  </body>
</html>

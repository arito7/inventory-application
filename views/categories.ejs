<!DOCTYPE html>
<html>
  <%- include('./partials/head', {title}) %>
  <body class="grey lighten-4">
    <%- include('./partials/header', {title}) %>
    <div class="row">
      <div class="col m3"><%- include('./partials/sidenav') %></div>
      <div class="col s12 m9">
        <div class="col s12">
          <h1><%= title %></h1>
        </div>

        <div class="col s12">
          <h2>Categories</h2>
        </div>

        <div class="col s12">
          <ul>
            <% categories.forEach(category => { %>
            <li class="chip hoverable green lighten-4">
              <a class="green-text" href="<%= category.url %>">
                <%= category.name %>
              </a>
            </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>

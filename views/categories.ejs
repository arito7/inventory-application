<!DOCTYPE html>
<html>
  <%- include('./partials/head', {title}) %>
  <body class="grey lighten-4">
    <%- include('./partials/header', {title}) %>
    <main>
      <div class="container">
        <%- include('./partials/sidenav') %>

        <div class="row center-align">
          <div class="col s12">
            <h2>Categories</h2>
          </div>
        </div>

        <div class="row center-align">
          <div class="col s12">
            <ul>
              <% if (categories.length > 0) {categories.forEach(category => { %>
              <li class="chip hoverable green lighten-4">
                <a class="green-text" href="<%= category.url %>">
                  <%= category.name %>
                </a>
              </li>
              <% })} else { %>
              <p>Currently there are no categories</p>
              <p>Click the button to add a new category</p>
              <a href="/catalog/category/create" class="btn"
                >Add a new category</a
              >
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>

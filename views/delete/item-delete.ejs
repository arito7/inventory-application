<!DOCTYPE html>
<html>
  <%- include('../partials/head', {title}) %>
  <body class="grey lighten-4">
    <%- include('../partials/header', { title }) %>

    <div class="row">
      <div class="col m3"><%- include('../partials/sidenav') %></div>
      <div class="col s12 m9">
        <div class="row">
          <div class="col s12">
            <h1><%= item.name %></h1>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <table>
              <tbody>
                <tr>
                  <th>Name</th>
                  <td><%= item.name %></td>
                </tr>
                <tr>
                  <th>Description</th>
                  <td><%= item.description %></td>
                </tr>
                <tr>
                  <th>Categories</th>
                  <td>
                    <% item.categories.forEach(category => { %> <%-
                    include('../partials/category-chip',{category}) %> <% }) %>
                  </td>
                </tr>
                <tr>
                  <th>Price</th>
                  <td>
                    <%= new Intl.NumberFormat('en-US', { style: 'currency',
                    currency: 'USD' }).format(item.price) %>
                  </td>
                </tr>
                <tr>
                  <th>Number in Stock</th>
                  <td><%= item.number_in_stock %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row red lighten-5 red-text center-align">
          <div class="col s12">
            <p><strong>Warning</strong></p>
            <% if (item.number_in_stock > 0) { %>
            <p>There are <%= item.number_in_stock %> in stock.</p>
            <% } %>
            <p>You cannot undo this action.</p>
            <p>Are you sure you want to delete this item?</p>
          </div>
          <div class="col s12 m6 center-align">
            <form action="" method="post">
              <input
                class="input-field"
                type="text"
                hidden
                disabled
                value="<%= item._id %>"
                name="id"
              />
              <button type="submit" class="input-field btn red">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <%- include('./partials/head', {title}) %>
  <body class="grey lighten-4">
    <%- include('./partials/header', {title}) %>

    <main>
      <div class="container">
        <%- include('./partials/sidenav') %>

        <div class="row center-align">
          <div class="col s12">
            <h1 style="font-size: 2rem"><%= item.name %></h1>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <table>
              <tbody>
                <% if (item.img_filename) { %>
                <tr style="border-bottom: none">
                  <img
                    class="responsive-img"
                    src="<%= item.img_url %>"
                    alt="Item image"
                  />
                </tr>
                <% } %>

                <tr style="border-top: none">
                  <th>Name</th>
                  <td><%= item.name %></td>
                </tr>
                <tr>
                  <th>Description</th>
                  <td><%= item.description %></td>
                </tr>
                <tr>
                  <th>Categories</th>
                  <td>
                    <% item.categories.forEach(category => { %> <%-
                    include('./partials/category-chip',{category}) %> <% }) %>
                  </td>
                </tr>
                <tr>
                  <th>Price</th>
                  <td>
                    <%= new Intl.NumberFormat('en-US', { style: 'currency',
                    currency: 'USD' }).format(item.price) %>
                  </td>
                </tr>
                <tr>
                  <th>Number in Stock</th>
                  <td><%= item.number_in_stock %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row center-align">
          <div class="col s12 m6">
            <div class="row">
              <a href="<%= item.url %>/update" class="btn blue"> Update </a>
            </div>
          </div>

          <div class="col s12 m6">
            <div class="row">
              <a href="<%= item.url %>/delete" class="btn red"> Delete </a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>

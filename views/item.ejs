<!DOCTYPE html>
<html>
  <%- include('./partials/head', {title}) %>
  <body class="grey lighten-4">
    <header>
      <nav>
        <div class="nav-wrapper">
          <a href="#" class="brand-logo right">Logo</a>
          <ul id="nav-mobile" class="left hide-on-small-and-down">
            <li><a href="sass.html">Sass</a></li>
            <li><a href="badges.html">Components</a></li>
            <li><a href="collapsible.html">JavaScript</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <div class="row center-align">
      <div class="col m3"><%- include('./partials/sidenav') %></div>
      <div class="col s12 m9">
        <div class="row">
          <div class="col s12">
            <h1><%= item.name %></h1>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <table>
              <tbody>
                <tr>
                  <th>Name</th>
                  <td><%= item.name %></td>
                </tr>
                <tr>
                  <th>Description</th>
                  <td><%= item.description %></td>
                </tr>
                <tr>
                  <th>Categories</th>
                  <td>
                    <% item.categories.forEach(category => { %> <%-
                    include('./partials/category-chip',{category}) %> <% }) %>
                  </td>
                </tr>
                <tr>
                  <th>Price</th>
                  <td>
                    <%= new Intl.NumberFormat('en-US', { style: 'currency',
                    currency: 'USD' }).format(item.price) %>
                  </td>
                </tr>
                <tr>
                  <th>Number in Stock</th>
                  <td><%= item.number_in_stock %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row center-align">
          <div class="col s12 m6">
            <a
              style="width: 100%"
              href="<%= item.url %>/update"
              class="btn blue"
            >
              Update
            </a>
          </div>
        </div>

        <div class="row center-align">
          <div class="col s12 m6">
            <a
              style="width: 100%"
              href="<%= item.url %>/delete"
              class="btn red"
            >
              Delete
            </a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

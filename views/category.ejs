<!DOCTYPE html>
<html>
  <%- include('./partials/head', {title}) %>
  <body class="grey lighten-4">
    <%- include('./partials/header', {title}) %>
    <div class="row">
      <div class="col m3"><%- include('./partials/sidenav') %></div>

      <div class="col s12 m9">
        <div class="col s12 center-align">
          <h1><%= title %></h1>
        </div>

        <div class="row">
          <div class="col s6 center-align">
            <a href="<%= category.url %>/update" class="btn blue">Update</a>
          </div>
          <div class="col s6 center-align">
            <a href="<%= category.url %>/delete" class="btn red">Delete</a>
          </div>
        </div>

        <div class="col s12">
          <% if (category_items.length > 0) { category_items.forEach(item => {
          %> <%- include('./partials/item-card', {item}) %> <% })} else { %>
          <p class="center-align">
            There are no items belonging to this category.
          </p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
